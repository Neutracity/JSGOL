// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",                        // Output modern JS
    "module": "ESNext",                        // Use ES modules (needed for `import`/`export`)
    "lib": ["DOM", "ES2020"],                  // DOM APIs + modern JS features
    "moduleResolution": "Bundler",             // Ensures clean resolution (even if not using a bundler)
    "strict": true,                            // Enables all strict type checking
    "noEmitOnError": true,                     // Don't output JS if there are type errors
    "outDir": "dist",                          // Output directory for compiled JS
    "rootDir": "src",                          // Source directory
    "esModuleInterop": true,                   // Safe default for imports
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}